<AnchorPane prefHeight="578.0" prefWidth="610.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GenerateNewpassword.newPasswordController">
    <children>
        <ImageView fitHeight="593.0" fitWidth="627.0" layoutX="-11.0" layoutY="-9.0" pickOnBounds="true">
            <image>
                <Image url="@../oferta-seguridad-informatica.jpg" />
            </image>
            <effect>
                <Lighting diffuseConstant="2.0" specularConstant="2.0" specularExponent="2.94" surfaceScale="6.5">
                   
               <light>
                  <Light.Distant color="#b2d5f5" />
               </light>
               <bumpInput>
                  <Shadow />
               </bumpInput>

                </Lighting>
            </effect>
        </ImageView>
        <Pane layoutX="76.0" layoutY="58.0" prefHeight="497.0" prefWidth="475.0" style="-fx-border-color: transparent;">
            <children>
                <Label layoutX="45.0" layoutY="14.0" prefHeight="43.0" prefWidth="373.0" text="Generate new password" textFill="#1a0505">
                    <font>
                        <Font name="Arial Narrow" size="35.0" />
                    </font>
                </Label>
            <JFXCheckBox fx:id="lowercase" layoutX="45.0" layoutY="75.0" prefHeight="31.0" prefWidth="213.0" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: pik;" text="Lower Case">
               <font>
                  <Font size="21.0" />
               </font>
            </JFXCheckBox>
            <JFXCheckBox fx:id="uppercase" layoutX="45.0" layoutY="113.0" prefHeight="31.0" prefWidth="185.0" text="Uppercase">
               <font>
                  <Font size="21.0" />
               </font>
            </JFXCheckBox>
            <JFXCheckBox fx:id="specialcharacters" layoutX="45.0" layoutY="151.0" prefHeight="31.0" prefWidth="263.0" text=" Special Characters">
               <font>
                  <Font size="21.0" />
               </font>
            </JFXCheckBox>
            <JFXCheckBox fx:id="digits" layoutX="45.0" layoutY="189.0" prefHeight="31.0" prefWidth="213.0" text="Digits">
               <font>
                  <Font size="21.0" />
               </font>
            </JFXCheckBox>
            <JFXButton fx:id="generatepassword" layoutX="106.0" layoutY="290.0" onAction="#onChange" prefHeight="59.0" prefWidth="283.0" style="-fx-background-color: Lightblue; -fx-background-radius: 20;" text="Generate Password">
