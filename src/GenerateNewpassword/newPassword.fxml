                  <Font size="24.0" />
               </font></JFXTextField>
            <JFXButton fx:id="cancel" layoutX="325.0" layoutY="452.0" onAction="#closeWindow" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: LightBlue; -fx-background-radius: 20;" text="Cancel" />
            <JFXButton fx:id="ok" layoutX="205.0" layoutY="452.0" onAction="#clearFields" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: LightBlue; -fx-background-radius: 20;" text="Clear" />
            <JFXTextField fx:id="PasswordLength" layoutX="125.0" layoutY="233.0" prefHeight="31.0" prefWidth="185.0">
               <font>
                  <Font size="18.0" />
               </font></JFXTextField>
            <Label alignment="CENTER" layoutX="32.0" layoutY="229.0" prefHeight="40.0" prefWidth="85.0" text="Length">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <JFXButton fx:id="ok1" layoutX="83.0" layoutY="452.0" onAction="#ClickOK" prefHeight="31.0" prefWidth="85.0" style="-fx-background-color: LightBlue; -fx-background-radius: 20;" text="OK" />
